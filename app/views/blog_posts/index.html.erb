<ul class="row post-list">
	<% for post in @posts %>
		<li class="row with-margins post-top-padding">
			<div class="grid-unit">
				<h3 class="post-title-list"><%= link_to post.title, blog_post_path(post), {:class => 'main-menu-link home-link'} %></h3>
				<p class="post-date"><%= post.created_at%> by <%= post.user.name %></h3>
			</div>
		</li>
	<% end %>
</ul>
