.white-theme {
	color: #111;
	background:#fff;
	-webkit-transition: color 1.0s ease-out;
	-webkit-transition: background 1.0s ease-out;

}

.black-theme {
	color: #eee;
	background:#000;
	-webkit-transition: color 1.0s ease;
	-webkit-transition: background 1.0s ease;
}

#content-area.white-theme {
	background: rgb(255, 255, 255) url(<%= asset_path 'noise.png' %>);
