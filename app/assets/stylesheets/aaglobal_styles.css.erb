/* CSS Reset */
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}



/* ========= GENERIC ================================================ */

.with-margins
{
	margin-left: auto;
	margin-right: auto;
	width: 65%;
}

.loading-hud {
	left:50%;
	top:150px;
	margin-right: auto;
	width: 30px;
	height: 30px;
	text-align: center;
	display: none;
	position: absolute;
}



/* ========= GRID LAYOUT ======================================== */

.page
{
	width: 100%;
	height: 100%;
}

.grid-unit {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  display: block;
  float: left;
  padding-right: 1.5em;
  width: 100%;
}

.row:after {
  content: " ";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.row-top-padding {
	padding-top: 20px;
}

.row-bottom-margin {
	padding-bottom: 80px;
}

.matrix-column {
	width: 20%;
}

/* This should be in apps.css but for some reason it's not found there,
despite the fact that other styles in tht file are been read.*/
.apps-matrix-column {
	width: 25%;
	text-align: center;
}



/* ========= PAGE LAYOUT ================================================ */

.header
{
	margin-left:auto;
	margin-right:auto;
	width: 100%;
	background-color: #fff;
	font-family: "HelveticaNeue-Light", "Helvetica", "Verdana";
  height: 70px;
  margin-bottom: 0;
  margin-top: 0;
  width:65%;
}

.header div.subtitle {
  font-style: italic;
  font-size: 1.0em;
  font-family: "Palatino";
  padding-top: 5px;
  color: #1376c1;
}

.header-margin {
  width: 25%;
}

.header-column {
	width: 50%;
}

#content-area {
	margin-left:auto;
	margin-right:auto;
	font-family: "HelveticaNeue-Light", "Helvetica", "Verdana";
	text-align: left;
	font-size: 1.2em;
	line-height: 1.4em;
	position: relative;
	padding-bottom: 45px;
  -webkit-transition: color 1.0s ease;
  -webkit-transition: background 1.0s ease;
}

.cover-space {
  height: 5px;
  background: #1a4e83;
}

.footer
{
	color: #777;
	font-family: "HelveticaNeue-Light", "Helvetica", "Verdana";
	padding-top: 65px;
  height: 5em;
}

.header-title-padding {
  padding-top: 19px;
}

/* Application Menu*/
.section-title
{
	list-style-type: none;
	padding: 0;
	text-align: center;
	width: 100%;
	margin-left:auto;
	margin-right:auto;
	margin-top: 0;
	font-family: "HelveticaNeue-Light", "Helvetica", "Verdana";
	font-weight: bold;
  color: #111;
  -webkit-transition: color 1.0s ease;
  -webkit-transition: background 1.0s ease;
}

.horizontal_menu {
  padding-top: 34px;
  margin: 0 auto;
}

.horizontal_menu ol
{
  display: table;
  list-style: none;
  margin-left: auto; /* So that it aligns right */
}

.horizontal_menu ol li
{
 	display: inline;
  text-align: center;
  display: table-cell;
  padding-right: 0.5em;
}

.horizontal_menu ol li a
{
	text-decoration: none;
  display: block;
	color: #222;
	font-family: "HelveticaNeue", "Helvetica", "Verdana";
  font-weight: bold;
}

.horizontal_menu ol li a:hover
{
	text-decoration: none;
	color: #0088CC;
}

.row-top-margin {
  padding-top: 5.0em;
}

.page-title {
	text-align: center;
	font: normal 2.5em Palatino, Georgia, serif;
	font-weight: bold;
	padding-top:100px;
}

.locales {

}

span.bold-text {
	font-weight:bold;
}



/* ========= CODE FORMATTING ================================================ */

code {
	font-size: 0.7em;
}



/* ========= THEMING ================================================ */

.with-clear-background {
  background: #fff url( <%= asset_path 'noise.png' %>);
}

.with-colored-background {
    background: #ffffff;
}

/* ========= RESPONSIVE DESIGN ================================================ */
@media only screen and (max-width: 900px) {

  .grid-unit.resizable {
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    display: block;
    float: none;
    padding-right: 0em;
    width: 100%;
  }

  .row-top-margin {
    padding-top: 100px;
  }

  .header div.subtitle {
    display: none;
  }

  .header-title-padding {
    padding-top: 35px;
  }

  .with-margins {
    margin-left: auto;
  	margin-right: auto;
  	width: 90%;
  }

  .row-top-margin {
    padding-top: 1.0em;
  }

}
